pipeline {
    agent any

    triggers {
        githubPush()  // This listens for GitHub webhook events
    }

    stages {
        stage('Condition1') {
            steps {
                script {
                    echo "This is the ${env.GIT_BRANCH} branch"  // Print the branch name
                }
            }
        }

        stage('Condition') {
            steps {
                script {
                    // Check if the branch is 'main'
                    if (env.GIT_BRANCH == 'origin/main') {
                        echo 'This is the main branch'
                    } else {
                        echo 'This is not the main branch'
                    }
                }
            }
        }

        // stage('Checkout') {
        //     steps {
        //         script {
        //             checkout scm
        //         }
        //     }
        // }

        // stage('Terraform Init') {
        //     steps {
        //         script {
        //             sh """
        //             terraform init -reconfigure
        //             """
        //         }
        //     }
        // }

        // stage('Terraform Plan') {
        //     steps {
        //         script {
        //             sh """
        //             terraform plan -lock=false -out=tfplan
        //             """
        //         }
        //     }
        // }

        stage('Approval') {
            steps {
                script {
                    // Only ask for approval on 'main' branch
                    if (env.GIT_BRANCH == 'origin/main') {
                        input message: 'Do you want to approve the deployment?', ok: 'Yes'
                    } else {
                        echo 'This is not the main branch, skipping approval.'
                    }
                }
            }
        }

        // stage('Terraform Apply') {
        //     when {
        //         branch 'main'  // This stage will only run on 'main' branch
        //     }
        //     steps {
        //         script {
        //             sh """
        //             terraform apply -auto-approve tfplan
        //             """
        //         }
        //     }
        // }
    }

    post {
        always {
            echo 'Pipeline execution complete'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
